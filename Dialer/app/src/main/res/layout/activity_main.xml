<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="com.lco.dialer.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/firstLayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editText"
                android:layout_width="214dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Enter no."
                android:inputType="none"
                android:textSize="30dp" />

            <Button
                android:id="@+id/buttonDelete"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_width="20dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:onClick="onDelete"
                android:text="Delete"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonOne"
                android:layout_width="98dp"
                android:layout_height="113dp"
                android:layout_weight="1"
                android:onClick="one"
                android:text="1"
                android:textColor="@color/colorAccent"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonTwo"
                android:layout_width="98dp"
                android:layout_height="113dp"
                android:layout_weight="1"
                android:onClick="two"
                android:text="2"
                android:textColor="@color/colorAccent"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonThree"
                android:layout_width="98dp"
                android:layout_height="113dp"
                android:layout_weight="1"
                android:onClick="three"
                android:text="3"
                android:textColor="@color/colorAccent"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/thirdLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonFour"
                android:layout_width="98dp"
                android:layout_height="113dp"
                android:layout_weight="1"
                android:onClick="four"
                android:text="4"
                android:textColor="@color/colorAccent"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonFive"
                android:layout_width="98dp"
                android:layout_height="113dp"
                android:layout_weight="1"
                android:onClick="five"
                android:text="5"
                android:textColor="@color/colorAccent"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonSix"
                android:layout_width="98dp"
                android:layout_height="113dp"
                android:layout_weight="1"
                android:onClick="six"
                android:text="6"
                android:textColor="@color/colorAccent"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fourthLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonSeven"
                android:layout_width="98dp"
                android:layout_height="113dp"
                android:layout_weight="1"
                android:onClick="seven"
                android:text="7"
                android:textColor="@color/colorAccent"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonEight"
                android:layout_width="98dp"
                android:layout_height="113dp"
                android:layout_weight="1"
                android:onClick="eight"
                android:text="8"
                android:textColor="@color/colorAccent"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonNine"
                android:layout_width="98dp"
                android:layout_height="113dp"
                android:layout_weight="1"
                android:onClick="nine"
                android:text="9"
                android:textColor="@color/colorAccent"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fiftLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonStar"
                android:layout_width="98dp"
                android:layout_height="113dp"
                android:layout_weight="1"
                android:onClick="star"
                android:text="*"
                android:textColor="@color/colorAccent"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonZero"
                android:layout_width="98dp"
                android:layout_height="113dp"
                android:layout_weight="1"
                android:onClick="zero"
                android:text="0"
                android:textColor="@color/colorAccent"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonHash"
                android:layout_width="98dp"
                android:layout_height="113dp"
                android:layout_weight="1"
                android:onClick="hash"
                android:text="#"
                android:textColor="@color/colorAccent"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sixthLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/msg"
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:layout_weight="1"
                android:background="#C82196F3"
                android:text="MESSAGE" />

            <Button
                android:id="@+id/call"
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:layout_weight="1"
                android:background="#BFE91E63"
                android:text="CALL" />

            <Button
                android:id="@+id/whatsapp"
                android:layout_width="90dp"
                android:layout_height="66dp"
                android:layout_weight="1"
                android:background="#B54CAF50"
                android:text="WHATSAPP" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
